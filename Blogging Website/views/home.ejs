<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Homepage</title>
    <style>
      /* Reset some default browser styles */
body, html {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: Arial, sans-serif;
  background-color: #898989; /* Light black background */
  color: #f1f1f1; /* Light text color for contrast */
}

/* Container for the homepage */
.container {
  max-width: 1200px; /* Maximum width for larger screens */
  margin: 50px auto; /* Centering the container */
  padding: 20px; /* Padding around the content */
}

/* Row styling */
.row {
  display: flex; /* Use flexbox for the rows */
  flex-wrap: wrap; /* Allow items to wrap to the next line */
  gap: 20px; /* Space between cards */
}

/* Card styling */
.card {
  background-color: #c3c0c0; /* Dark grey background for cards */
  border: none; /* Remove border */
  border-radius: 8px; /* Rounded corners */
  overflow: hidden; /* Prevent overflow of image or content */
  transition: transform 0.3s ease; /* Smooth transform transition */
}

/* Card hover effect */
.card:hover {
  transform: translateY(-5px); /* Lift effect on hover */
}

/* Card image styling */
.card-img-top {
  width: 100%; /* Full width for images */
  height: auto; /* Maintain aspect ratio */
}

/* Card title styling */
.card-title {
  font-size: 1.2em; /* Larger title font size */
  margin-bottom: 10px; /* Spacing below the title */
}

/* Button styling */
.btn-primary {
  background-color: #007bff; /* Bootstrap primary button color */
  border: none; /* Remove border */
  border-radius: 4px; /* Rounded corners */
  padding: 10px 15px; /* Padding for button */
  color: white; /* White text color */
  transition: background-color 0.3s ease; /* Smooth background color transition */
}

/* Button hover effect */
.btn-primary:hover {
  background-color: #0056b3; /* Darker blue on hover */
}

/* Responsive design for smaller screens */
@media (max-width: 768px) {
  .card {
    width: 100%; /* Full width on small screens */
  }
}

    </style>
  </head>
  <body>
    <!-- navbar -->
    <%- include("./partials/nav") %>

    <div class="container mt-3 ms-3">
      <div class="row row-cols-4">
        <% blogs.forEach(blog => { %>
        <div class="container">
          <div class="card" style="width: 15rem">
            <img src="<%= blog.coverImageUrl %>" class="card-img-top" alt="..." />
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <!-- script -->
    <%- include('./partials/script') %>
  </body>
</html>
